#include <iostream>
using namespace std;

int main()
{
    int i, n;
    float arr[100];
    
    cout << "Enter total number of elements(1 to 100): ";
    cin >> n;
    cout << endl;
	
	for(i = 0; i < n; ++i)
    {
       cin >> arr[i];
    }
    int max = arr[0];
    int result= 0;
    for(int i=0; i<n; i++)
        if(arr[i] > max)
            max = arr[i];
    for(int i = 0; i < n; i++)
        if (arr[i] == max)
            result++;
    cout<<result;
    return result;
}
